<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/development_bar' if development_mode? %>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <%- flash.each do |key, msg| -%>
          <p class="<%= key %>"><%= msg %></p>
        <%- end -%>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
