= form_for(@lecture) do |f|
  - if @lecture.errors.any?
    #error_explanation
      %h2
        = pluralize(@lecture.errors.count, "error")
        prohibited this lecture from being saved:
      %ul
        - @lecture.errors.full_messages.each do |msg|
          %li= msg
  Titel:
  = f.text_field :title
  .actions
    = f.submit
