<h1>Listing slides</h1>

<table>
  <tr>
    <th>Filepath</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @slides.each do |slide| %>
  <tr>
    <td><%= image_tag slide.image_url(:thumb) if slide.image? %></td>
    <td><%= link_to 'Show', [slide.slideset, slide] %></td>
    <td><%= link_to 'Edit', edit_slideset_slide_path(slide.slideset, slide) %></td>
    <td><%= link_to 'Destroy', [slide.slideset, slide], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Slide', new_slideset_slide_path %>
<%= link_to 'Back', slidesets_path %>
